<div class="articles">
  <h1>Articles</h1>

  <% if @articles.empty? %>
    <p>No articles were found</p>
  <% else %>
    <div>
      <% @articles.each do |article| %>
        <div class="article">
          <h2><%= article.title %></h2>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
